<div class="auth-page">
  <div class="auth-card">
    <h1 class="auth-title">Sign in</h1>
    <p class="auth-subtitle">Enter your email and password.</p>

    <% if flash.now[:alert] %>
      <div class="auth-alert" role="alert">
        <p><strong>Invalid email or password.</strong></p>
        <p>If you don’t have an account yet, <%= link_to "create one here", new_user_path, data: { turbo: false } %>.</p>
      </div>
    <% end %>

    <%= form_with url: login_path, local: true, class: "auth-form" do |f| %>
      <div class="auth-field">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, required: true, placeholder: "you@example.com", autofocus: true, class: "auth-input", value: params[:email] %>
      </div>
      <div class="auth-field">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, required: true, placeholder: "••••••••", class: "auth-input" %>
      </div>
      <div class="auth-actions">
        <%= f.submit "Sign in", class: "auth-submit" %>
      </div>
    <% end %>

    <p class="auth-footer">
      Don’t have an account? <%= link_to "Create an account", new_user_path, data: { turbo: false } %>
    </p>
  </div>
</div>
